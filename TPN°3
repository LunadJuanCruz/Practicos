#include <stdio.h>

int main() {
	float peso, altura, imc;
	
	printf("Ingrese cuanto pesa: \n ");
		scanf("%f", &peso);
	
	printf("Ingrese cuanto mide: \n");
		scanf("%f", &altura);
	

	imc = peso / (altura * altura);
	
	
	printf("Su indice de masa corporal es: %.2f\n", imc);
	
	printf("\n     Indice | Condicion\n");
	printf("--------------------------\n");
	printf("<18.5       | Bajo peso\n");
	printf("18.5 a 24.9 | Normal\n");
	printf("25.0 a 29.9 | Sobrepeso\n");
	printf(">=30        | Obesidad\n");
	
	return 0;

if (imc < 18.5) {
    printf("\nUsted se encuentra en la categoria: Bajo peso.\n");
 } else if (imc >= 18.5 && imc <= 24.9) {
     printf("\nUsted se encuentra en la categoria: Normal.\n");
} else if (imc >= 25 && imc <= 29.9) {
    printf("\nUsted se encuentra en la categoria: Sobrepeso.\n");
} else {
     printf("\nUsted se encuentra en la categoria: Obesidad.\n");
}

 }
