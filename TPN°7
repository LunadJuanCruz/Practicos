#include <stdio.h>

#define TAM 3

int main(int argc, char *argv[]) { //tenes q solucionar lo de la 123 
	
	int CodigoDeBarra [TAM];
	float Precios[TAM]; 
	int mayor =0;
	int menor =0;
	
	printf ("Buen dia, ingrese los %d Codigos De Barra: \n", TAM);
	
	for( int i =0; i < TAM; i ++){
		
		printf ("\n");
		printf ("Ingrese el Codigo De Barra %d: \n", i+1);
		scanf ("%d", &CodigoDeBarra[i]);
		
		while (CodigoDeBarra [i] < 0){ //repite q pase los codigos de nuevo si son eng
			printf ("Los Codigos de barra no pueden ser negativos, por favor ingrese nuevamente: \n");
			scanf ("%d", &CodigoDeBarra[i]);
		}
		printf ("Ingrese el Precio %d: \n", i+1);
		scanf ("%f", &Precios[i]);
		
		while (Precios[i] < 0){ //repite q pase los precios de nuevo si son neg
			printf ("Los precios no pueden ser negativos, por favor ringrese nuevamente: \n");
			scanf ("%f", &Precios[i]);
		}
		
	}
	printf ("---------------------------------------------------------------------------------------");
	
	printf ("\n\nCODIGOS                  PRECIOS \n");
	
	for (int i = 0; i < TAM; i++) {
		printf(" \n %d                  %.2f\n", CodigoDeBarra[i], Precios[i]);
	}
	
	printf ("---------------------------------------------------------------------------------------");
	
	for(int i= 0; i < TAM; i++){
		if (Precios[i] > Precios[mayor]){
			mayor = i;
		}
		if (Precios [i] < Precios[menor]){
			menor = i;
		}
	}
	printf("\n\nEl elemento mas caro es: %.2f y su codigo de barra es: %d\n", Precios[mayor], CodigoDeBarra[mayor]);
	printf("El elemento mas barato es: %.2f y su codigo de barra es: %d\n", Precios[menor], CodigoDeBarra[menor]);
	
	
	return 0;
}
